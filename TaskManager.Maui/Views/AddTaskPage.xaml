<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.Maui.Views.AddTaskPage"
             xmlns:vm="clr-namespace:TaskManager.Maui.ViewModels"
             x:DataType="vm:AddTaskViewModel"
             Title="Add Task"
             BackgroundColor="{DynamicResource BackgroundColor}">


    <VerticalStackLayout Padding="25">
        <Label Text="Task Title" FontAttributes="Bold" TextColor="{DynamicResource TextColor}"></Label>
        <Entry Placeholder="Task Title" Text="{Binding TaskTitle}"
               TextColor="{DynamicResource TextColor}" ></Entry>

        <Label Text="Due Date" 
               FontAttributes="Bold"
               TextColor="{DynamicResource TextColor}"></Label>
        <DatePicker Date="{Binding DueDate}"></DatePicker>

        <!--Completed checkbox-->
        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <CheckBox IsChecked="{Binding IsCompleted}" 
                      VerticalOptions="Center" />
            <Label Text="Completed" 
                   VerticalOptions="Center" 
                   TextColor="{DynamicResource TextColor}"/>
        </HorizontalStackLayout>

        <Button Text="Save Task" Command="{Binding SaveTaskCommand}"
                BackgroundColor="{DynamicResource AccentColor}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Margin="10"></Button>

    </VerticalStackLayout>
</ContentPage>